<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/main_60"
        android:maxLines="1"
        android:text="标题"
        android:textColor="@color/color_filter_menu_title"
        android:textSize="@dimen/text_14" />

    <ImageView
        android:id="@+id/iv_filter_right"
        android:layout_width="@dimen/main_8"
        android:layout_height="@dimen/main_5"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/main_5"
        android:src="@drawable/selector_filter_menu_arrow" />
</LinearLayout>